{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "API Documentation Schema",
  "type": "object",
  "required": [
    "title",
    "date",
    "author",
    "version",
    "base_url",
    "openapi_version"
  ],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "author": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "base_url": {
      "type": "string",
      "minLength": 1
    },
    "openapi_version": {
      "type": "string",
      "minLength": 1
    }
  },
  "additionalProperties": false
}
