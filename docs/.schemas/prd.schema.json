{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product Requirements Document Schema",
  "type": "object",
  "required": [
    "title",
    "date",
    "author",
    "status",
    "priority",
    "target_release"
  ],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "author": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "review",
        "approved",
        "deprecated"
      ]
    },
    "priority": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high",
        "critical"
      ]
    },
    "target_release": {
      "type": "string",
      "minLength": 1
    }
  },
  "additionalProperties": false
}
