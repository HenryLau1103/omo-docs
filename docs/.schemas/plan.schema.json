{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Plan Document Schema",
  "type": "object",
  "required": [
    "title",
    "date",
    "author",
    "status",
    "estimated_hours",
    "dependencies"
  ],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "author": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "in_progress",
        "completed",
        "cancelled"
      ]
    },
    "estimated_hours": {
      "type": "number",
      "minimum": 0
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}
