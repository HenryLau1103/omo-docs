{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Changelog Document Schema",
  "type": "object",
  "required": [
    "title",
    "date",
    "author",
    "version",
    "release_date",
    "breaking"
  ],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "author": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "release_date": {
      "type": "string",
      "format": "date"
    },
    "breaking": {
      "type": "boolean"
    }
  },
  "additionalProperties": false
}
