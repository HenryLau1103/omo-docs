{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Specification Document Schema",
  "type": "object",
  "required": [
    "title",
    "date",
    "author",
    "status",
    "version",
    "tags"
  ],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "author": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "review",
        "approved",
        "deprecated"
      ]
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    }
  },
  "additionalProperties": false
}
